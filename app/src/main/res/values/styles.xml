<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="MyButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <!--    Custom style -->
    <style name="SplashTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AppTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--    List Item Leagues -->
    <style name="ListItemTitleLeagues">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/dark</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemSubtitleLeagues" parent="ListItemTitleLeagues">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
    </style>
    <!--    Tab Layout-->
    <style name="CustomTabLayout">
        <item name="android:background">@drawable/tab_layout_background</item>
        <item name="tabBackground">@drawable/tab_layout_selector</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/dark</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!--    List Item Match -->
    <style name="ListItemTitleMatches">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItemSubtitleMatches">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="SeparatorScore">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <!--    List Item Team-->
    <style name="ListItemTitleTeam" parent="ListItemTitleMatches" />

    <style name="ListItemSubtitleTeam" parent="ListItemSubtitleMatches" />

    <style name="ListItemThirdSubtitleTeam">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>
    <!--    Collapsing Toolbar -->
    <style name="DetailTitle">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailSubtitle">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailThirdSubtitle">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailInfoMatch">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailInfoText">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/dark</item>
    </style>

</resources>
